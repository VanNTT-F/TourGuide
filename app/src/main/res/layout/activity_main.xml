<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="@dimen/margin">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:text="@string/app_title"
        android:textSize="@dimen/text_size1"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/purple_500"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/flag_size"
        android:src="@drawable/vietnam"
        android:contentDescription="@string/location"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location"
        android:textSize="@dimen/text_size1"
        android:layout_gravity="center"
        android:padding="@dimen/text_padding"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <ImageButton
            android:id="@+id/hotel_img"
            android:layout_width="@dimen/imgBtn_size"
            android:layout_height="@dimen/imgBtn_size"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/hotel"
            android:scaleType="fitCenter"
            android:contentDescription="@string/hotel"/>
        <ImageButton
            android:id="@+id/atm_img"
            android:layout_width="@dimen/imgBtn_size"
            android:layout_height="@dimen/imgBtn_size"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/atm_machine"
            android:scaleType="fitCenter"
            android:contentDescription="@string/atm"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:padding="@dimen/text_padding"
            android:text="@string/hotel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:padding="@dimen/text_padding"
            android:text="@string/atm"/>
        <ImageButton
            android:id="@+id/hospital_img"
            android:layout_width="@dimen/imgBtn_size"
            android:layout_height="@dimen/imgBtn_size"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/hospital"
            android:scaleType="fitCenter"
            android:contentDescription="@string/hospital"/>
        <ImageButton
            android:id="@+id/metro_img"
            android:layout_width="@dimen/imgBtn_size"
            android:layout_height="@dimen/imgBtn_size"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:background="@color/white"
            android:src="@drawable/metro"
            android:scaleType="fitCenter"
            android:contentDescription="@string/metro"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:padding="@dimen/text_padding"
            android:text="@string/hospital"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="0.5"
            android:layout_gravity="center"
            android:padding="@dimen/text_padding"
            android:text="@string/metro"/>
    </GridLayout>
</LinearLayout>